source ~/.vim/bundle.vim

"==================== general settings

syntax on
set nowrap
set tabstop=2
set shiftwidth=2
set smarttab
set expandtab

set backspace=indent,eol,start
set list

"==================== styles
set number
set relativenumber
set ttyfast
set t_Co=256
set incsearch

"==================== NERDTree
let NERDTreeIgnore = ['\.pyc$']

"==================== CommandT
set wildignore=*.pyc

